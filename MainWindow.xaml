<Window x:Class="A2J_Calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:A2J_Calc"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Submit" Content="Submit Document" HorizontalAlignment="Left" TabIndex="6" Height="81" Margin="201,322,0,0" VerticalAlignment="Top" Width="168" Grid.ColumnSpan="3" Click="Submit_Click"/>
        <TextBox x:Name="txtNumFields" Grid.ColumnSpan="3" TabIndex="2" HorizontalAlignment="Left" Height="30" Margin="182,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219"/>
        <Label Grid.ColumnSpan="3" Content="Number of Variables&#xD;&#xA;" HorizontalAlignment="Left" Height="30" Margin="38,127,0,0" VerticalAlignment="Top" Width="140"/>
        <Label Grid.ColumnSpan="3" Content="Document number :" HorizontalAlignment="Left" Height="30" Margin="44,10,0,0" VerticalAlignment="Top" Width="118"/>
        <TextBox x:Name="txtDocNumber"  Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="30" Margin="167,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90"/>
        <Label Grid.ColumnSpan="3" Content="Number Repeated" HorizontalAlignment="Left" Height="30" Margin="110,184,0,0" VerticalAlignment="Top" Width="109"/>
        <TextBox x:Name="txtNumRepeated" Grid.ColumnSpan="3" TabIndex="3" HorizontalAlignment="Left" Height="30" Margin="242,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127"/>
        <CheckBox x:Name="boolNeedFast" Grid.ColumnSpan="3" TabIndex="4" Content="Needed in less than 30 days" HorizontalAlignment="Left" Height="30" Margin="219,243,0,0" VerticalAlignment="Top" Width="183"/>
        <CheckBox x:Name="boolNeedWord" Grid.ColumnSpan="3" TabIndex="5" Content="Need in Word format" HorizontalAlignment="Left" Height="30" Margin="219,285,0,0" VerticalAlignment="Top" Width="183" Checked="CheckBox_Checked"/>
        <Label Grid.ColumnSpan="3" Content="Number of pages" HorizontalAlignment="Left" Margin="44,85,0,0" VerticalAlignment="Top" Width="118" Height="30"/>
        <TextBox x:Name="txtNumPages" Grid.ColumnSpan="3" TabIndex="1"  HorizontalAlignment="Left" Height="30" Margin="182,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="219"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="437" Margin="18,0,0,0" VerticalAlignment="Top" Width="430"/>
        <Label Grid.ColumnSpan="3" Content="Cost for pages:" HorizontalAlignment="Left" Height="30" Margin="521,46,0,0" VerticalAlignment="Top" Width="136"/>
        <TextBox x:Name="numTotalPagesCost" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="30" Margin="631,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="131"/>
        <Label Grid.ColumnSpan="3" Content="Cost for fields:" HorizontalAlignment="Left" Height="30" Margin="529,98,0,0" VerticalAlignment="Top" Width="85"/>
        <TextBox x:Name="numTotalFieldsCost" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="30" Margin="631,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="131"/>
        <Label Grid.ColumnSpan="3" Content="Upcharge for rush:" HorizontalAlignment="Left" Height="30" Margin="499,143,0,0" VerticalAlignment="Top" Width="115"/>
        <TextBox x:Name="numRushUpchargeAmount" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="30" Margin="631,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="131"/>
        <Label Grid.ColumnSpan="3" Content="Upcharge for Word format:" HorizontalAlignment="Left" Height="30" Margin="466,184,0,0" VerticalAlignment="Top" Width="158"/>
        <TextBox x:Name="numWordUpchargePercent" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="30" Margin="629,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="39"/>
        <TextBox x:Name="numWordUpchargeAmount" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="30" Margin="687,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75"/>
        <Label Grid.ColumnSpan="3" Content="Grand Total:" HorizontalAlignment="Left" Height="30" Margin="499,243,0,0" VerticalAlignment="Top" Width="136"/>
        <TextBox x:Name="numGrandTotal" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="30" Margin="629,243,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="133"/>

    </Grid>
</Window>
